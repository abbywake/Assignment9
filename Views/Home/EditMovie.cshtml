@model Assignment9.Models.addMovie

@* This bad boy edits the movie. IT takes what Movie you clicked on and you can edit and save it through the asp-action *@
<form asp-action="SubmitEditMovie" method="post" >
    <label asp-for="Title">
        Title
    </label>
    <input type="text" asp-for="Title" value="@Model.Title"/>
    <br />
    <label asp-for="Category">
        Category
    </label>
    <input type="text" asp-for="Category" value="@Model.Category" />
    <br />
    <label asp-for="Year">
        Year
    </label>
    <input type="text" asp-for="Year" value="@Model.Year"/>
    <br />
    <label asp-for="DirectorFName">
        DirectorFName
    </label>
    <input type="text" asp-for="DirectorFName" value="@Model.DirectorFName"/>
    <br />
    <label asp-for="DirectorLName">
        DirectorLName
    </label>
    <input type="text" asp-for="DirectorLName" value="@Model.DirectorLName"/>
    <br />
    <label asp-for="Rating">Rating: </label>
    <select asp-for="Rating" value="@Model.Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <label asp-for="Edited">Edited (yes/no): </label>
    <select asp-for="Edited" value="@Model.Edited">
        <option value="true"> YES</option>
        <option value="false"> NO</option>
    </select>
    <br />
    <label asp-for="LentTo" >
        LentTo
    </label>
    <input type="text" asp-for="LentTo" value="@Model.LentTo"/>
    <br />
    <label asp-for="Notes">
        Notes
    </label>
    <input type="text" asp-for="Notes" value="@Model.Notes"/>
    <br />
    <button type="submit" id="button">Edit the Movie</button>
    <div asp-validation-summary="All"></div>

</form>
